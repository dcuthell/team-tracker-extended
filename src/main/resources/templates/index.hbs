{{#partial "content"}}

    <h1>Current Teams:</h1>

    {{#if teams}}
        {{#each teams }}
            <p>{{ name }} <a href="/teams/{{id}}"><span class="glyphicon glyphicon-pencil"></span></a></p>
        {{/each}}
    {{else}}
        <p>No Teams to Show!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}